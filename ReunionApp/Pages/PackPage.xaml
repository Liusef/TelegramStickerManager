<Page
    x:Class="ReunionApp.Pages.PackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ReunionApp.Pages"
    xmlns:project="using:ReunionApp"
    xmlns:types="using:TgApi.Types"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="PackPageInst"
    NavigationCacheMode="Enabled"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="24, 24, 0, 0"  Spacing="12">
            <Button Content="Back" Click="Back"/>
            <StackPanel Spacing="8">
                <!--Image Source="{x:Bind project:App.PackThumb(pack.EnsuredThumb)}" Width="100" Height="100" VerticalAlignment="Stretch" HorizontalAlignment="Center" /-->
                <Image x:Name="PackThumb" Width="100" Height="100" VerticalAlignment="Stretch" HorizontalAlignment="Center"/>
                <TextBlock x:Name="Title" FontSize="24" FontWeight="Bold" TextTrimming="CharacterEllipsis" TextWrapping="Wrap"/>
                <TextBlock x:Name="Name" FontWeight="Light" TextTrimming="CharacterEllipsis"/>
            </StackPanel>
            <StackPanel Margin="0, 24, 0, 0" HorizontalAlignment="Stretch">
                <Button Content="Add Stickers" Click="AddSticker" HorizontalContentAlignment="Center" HorizontalAlignment="Stretch"/>
            </StackPanel>
        </StackPanel>

        <StackPanel x:Name="Loading" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
            <ProgressBar x:Name="PB" IsIndeterminate="True"  Grid.Row="2" Width="200" Margin="24"/>
            <TextBlock Text="Loading" HorizontalAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
            <TextBlock Text="This may take a while..." HorizontalAlignment="Center"/>
        </StackPanel>

        <GridView 
            x:Name="StickerGrid" 
            Grid.Column="1" 
            ItemsSource="{x:Bind stickers}"
            HorizontalAlignment="Center"
            Margin="16"
            Padding="8"
            CornerRadius="16"
            ShowsScrollingPlaceholders="True"
            Background="{ThemeResource SystemRevealListLowColor}"
            Visibility="Collapsed">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="types:Sticker">
                    <StackPanel Padding="12" Spacing="12" MinHeight="163">
                        <!--Image x:Name="StickerImg" Width="124" Height="160" HorizontalAlignment="Center" VerticalAlignment="Stretch"
                               Source="{x:Bind project:App.StickerImg(Filename)}"/-->
                        <Image x:Name="StickerImg" Source="{x:Bind BestPath}" Width="124" Height="160" HorizontalAlignment="Center" VerticalAlignment="Stretch"/>
                        <TextBlock Text="{x:Bind Emojis}" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>
