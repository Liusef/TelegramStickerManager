<Page
    x:Class="ReunionApp.Pages.PackPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:types="using:TgApi.Types"
    xmlns:controls="using:ReunionApp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    x:Name="PackPageInst"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="24, 24, 0, 16"
              RowSpacing="4">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0"
                    Content="Back"
                    Click="Back" />

            <StackPanel Grid.Row="1"
                        Spacing="4">
                <Image x:Name="PackThumb"
                       Width="100"
                       Height="100"
                       VerticalAlignment="Stretch"
                       HorizontalAlignment="Center" />
                <TextBlock x:Name="PackTitle"
                           FontSize="24"
                           FontWeight="Bold"
                           TextTrimming="CharacterEllipsis"
                           TextWrapping="Wrap" />
                <TextBlock x:Name="PackName"
                           FontWeight="Light"
                           TextTrimming="CharacterEllipsis" />
            </StackPanel>

            <Grid Grid.Row="2">
                <ScrollViewer>
                    <StackPanel Margin="0, 16, 16, 0"
                                HorizontalAlignment="Stretch"
                                Spacing="8">
                        <Button x:Name="Open"
                                Content="Open In Telegram"
                                Click="OpenInTelegram"
                                HorizontalAlignment="Stretch"/>
                        <Button x:Name="Copy" 
                                Content="Copy Link"
                                Click="CopyLink"
                                HorizontalAlignment="Stretch">
                            <Button.Flyout>
                                <Flyout>
                                    <TextBlock>
                                        Copied to clipboard!
                                    </TextBlock>
                                </Flyout>
                            </Button.Flyout>
                        </Button>

                        <controls:StackDivider/>


                        <Button x:Name="Add"
                                Content="Add Stickers"
                                Click="AddSticker"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        <Button x:Name="Del"
                                Content="Delete Stickers"
                                Click="DelSticker"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                        <Button x:Name="Order"
                                Content="Reorder Stickers"
                                Click="OrderSticker"
                                HorizontalAlignment="Stretch"
                                IsEnabled="False" />
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            
        </Grid>

        <StackPanel x:Name="Load"
                    Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Visibility="Visible">

            <ProgressBar x:Name="LoadBar"
                         IsIndeterminate="True"
                         Width="200"
                         Margin="24" />
            <TextBlock Text="Loading"
                       HorizontalAlignment="Center"
                       FontSize="18"
                       FontWeight="SemiBold" />
            <TextBlock Text="This may take a while..."
                       HorizontalAlignment="Center" />

        </StackPanel>

        <GridView
            x:Name="StickerGrid"
            Grid.Column="1"
            ItemsSource="{x:Bind stickers}"
            HorizontalAlignment="Center"
            Margin="16"
            Padding="8"
            CornerRadius="16"
            ShowsScrollingPlaceholders="True"
            Background="{ThemeResource SystemRevealListLowColor}"
            Visibility="Collapsed">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="types:Sticker">
                    <StackPanel Padding="12"
                                Spacing="12"
                                MinHeight="163">
                        <Image x:Name="StickerImg"
                               Source="{x:Bind BestPath}"
                               Width="124"
                               Height="160"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Stretch" />
                        <TextBlock Text="{x:Bind Emojis}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   TextTrimming="CharacterEllipsis" />
                    </StackPanel>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
        
    </Grid>
</Page>